[Unit]
Description=cpupower-gui D-Bus helper service
Documentation=https://github.com/pe200012/cpupower-gui-qml

[Service]
Type=dbus
BusName=io.github.cpupower_gui.qt.helper
ExecStart=@CMAKE_INSTALL_PREFIX@/@HELPER_INSTALL_DIR@/cpupower-gui-helper
User=root

# Security hardening
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes
NoNewPrivileges=no
ReadWritePaths=/sys/devices/system/cpu

# No [Install] section - this service is started on-demand via D-Bus activation
# The D-Bus service file (io.github.cpupower_gui.qt.helper.service) triggers this
